{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "composite": true,
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "lib",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@src/*": ["./src/*"],
    },
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
